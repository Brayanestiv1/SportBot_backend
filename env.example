# ===== CONFIGURACIÓN DE LA APLICACIÓN =====
APP_NAME=SportBot Assistant
VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here

# ===== CONFIGURACIÓN DEL SERVIDOR =====
HOST=0.0.0.0
PORT=8000

# ===== CONFIGURACIÓN DE BASE DE DATOS =====
# Configuración para Docker (por defecto)
DATABASE_URL=mysql://root:admin@db:3306/sportbot_db

# Configuración alternativa para desarrollo local
DB_HOST=localhost
DB_PORT=3307
DB_USER=root
DB_PASSWORD=admin
DB_NAME=sportbot_db
CA_PATH=

# ===== CONFIGURACIÓN DE QDRANT =====
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=sportbot_collection

# ===== CONFIGURACIÓN DE REDIS =====
REDIS_HOST=localhost
REDIS_PORT=6379

# ===== CONFIGURACIÓN DE OPENAI/LLM =====
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# ===== CONFIGURACIÓN DE EMBEDDINGS =====
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ===== CONFIGURACIÓN DE TELEGRAM =====
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
BOT_NAME=SportBot

# ===== CONFIGURACIÓN DE SEGURIDAD =====
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== CONFIGURACIÓN DE LOGS =====
LOG_LEVEL=INFO
